<project name="ssa4j" basedir=".." default="make-dist">

	<property name="version" value="0.7.0" />
	<property name="jar.name" value="${ant.project.name}-${version}.jar" />

	<property name="source.dir" value="source" />
	<property name="source.test.dir" value="source-test" />

	<property name="classes.dir" value="classes" />
	<property name="classes.test.dir" value="classes-test" />

	<property name="javac.source" value="1.5" />
	<property name="javac.target" value="1.5" />

	<property name="dist.dir" value="dist" />
	<property name="build.dir" value="build" />

	<property name="javadocs.dir" value="javadocs" />
	<property name="junit.reports.dir" value="junit-reports" />

	<property name="lib.dir" value="lib" />


	<path id="build.classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="make-dist" depends="compile, make-jar" />

	<target name="clean" description="Deletes the classes and dist artifacts">
		<delete dir="${classes.dir}" />
		<delete dir="${dist.dir}" />
		<delete dir="${classes.test.dir}" />
		<delete dir="${junit.reports.dir}" />
		<delete dir="${javadocs.dir}" />
	</target>

	<target name="compile" description="Compiles all project classes">
		<delete dir="${classes.dir}" />
		<mkdir dir="${classes.dir}" />
		<!-- compile -->
		<javac source="${javac.source}" target="${javac.target}" srcdir="${source.dir}" destdir="${classes.dir}" classpathref="build.classpath" debug="true" />
	</target>

	<target name="compile-tests" description="Compiles all project test classes">
		<delete dir="${classes.test.dir}" />
		<mkdir dir="${classes.test.dir}" />

		<path id="build.tests.classpath">
			<pathelement location="${classes.dir}" />
			<path refid="build.classpath" />
		</path>
		<!-- compile -->
		<javac source="${javac.source}" target="${javac.target}" srcdir="${source.test.dir}" destdir="${classes.test.dir}" classpathref="build.tests.classpath" debug="true" />
	</target>

	<target name="make-jar" description="Creates a jar called ${jar.name} in ${dist.dir} from classes in ${classes.dir}">
		<delete dir="${dist.dir}" />
		<mkdir dir="${dist.dir}" />
		<jar jarfile="${dist.dir}/${jar.name}" update="false">
			<fileset dir="${classes.dir}" />
			<fileset dir="${source.dir}">
				<exclude name="**/*.java" />
			</fileset>
		</jar>
	</target>

	<target name="run-junit" description="Runs any JUnit test cases located in ${classes.test.dir}">
		<mkdir dir="${junit.reports.dir}" />
		<junit printsummary="yes" haltonfailure="false">
			<classpath>
				<pathelement location="${classes.dir}" />
				<pathelement location="${classes.test.dir}" />
				<path refid="build.classpath" />
			</classpath>

			<formatter type="xml" />

			<batchtest fork="yes" todir="${junit.reports.dir}">
				<fileset dir="${source.test.dir}">
					<include name="**/*Test*.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>
</project>