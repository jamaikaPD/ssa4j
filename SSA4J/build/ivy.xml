<?xml version="1.0" encoding="ISO-8859-1"?>
<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
	<info 
		organisation="ssa4j"
		module="ssa4j"
		status="release"
		revision="0.7">
		<description>
		A Java API that leverages modern Java constructs like annotations
		to produce a portable API that can data-bind to object supported 
		by the Screen-Scraper server.
		</description>
	</info>
	<configurations defaultconfmapping="default->professional">
		<conf name="professional" 
			description="For use with the Professional version of the screen-scraper project"/>
			
		<conf name="enterprise" extends="professional"
			description="For use with the Enterprise version of the screen-scraper project"/>
			
		<conf name="mock"
			description="Additional configuration for the ssa4j 'mock' framework"/>
			
		<conf name="test"
			description="Additional configuraiton for testing ssa4j"/>
	</configurations>
	<publications>
		<artifact name="ssa4j" ext="jar" type="jar" conf="professional"/>
	</publications>
	<dependencies>
					
		<dependency org="junit" 
					name="junit" 
					rev="4.6" 
					conf="test->default"/>
		
		<dependency org="codehaus" 
					name="groovy-all" 
					rev="1.6.3"
					conf="mock->default"/>
					
		<dependency org="javax.xml" 
					name="jaxb" 
					rev="2.1"
					conf="mock->default"/>
					
		<dependency org="slf4j" 
					name="slf4j-api" 
					rev="1.5.6"
					conf="professional->default"/>
					
		<dependency org="slf4j" 
					name="slf4j-log4j12" 
					rev="1.5.6"
					conf="professional->default"/>

		<dependency org="screen-scraper" 
					name="java-api" 
					rev="4.5" 
					conf="professional->default"/>

		<!--  SOAP Client Dependencies -->
					
		<dependency org="javax.xml"
					name="jaxrpc"
					rev="1.1"
					conf="enterprise->default"/>
					
		<dependency org="apache"
					name="axis"
					rev="1.4"
					conf="enterprise->default"/>
					
		<dependency org="apache"
					name="commons-discovery"
					rev="0.4"
					conf="enterprise->default"/>
					
		<dependency org="apache"
					name="commons-logging"
					rev="1.0.4"
					conf="enterprise->default"/>
					
		<dependency org="javax.xml"
					name="saaj-api"
					rev="1.3"
					conf="enterprise->default"/>
					
		<dependency org="ibm"
					name="wsdl4j"
					rev="1.6.2"
					conf="enterprise->default"/>
	</dependencies>
</ivy-module>